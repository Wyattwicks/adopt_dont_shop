<%= link_to "Pets", "/pets" %>
<%= link_to "Shelters", "/shelters" %>
<%= link_to "Veterinarians", "/veterinarians" %>
<%= link_to "Veterinary Offices", "/veterinary_offices" %>
<%= link_to "Applications", "/applications" %>

<h1>New Pet</h1>
<%= form_with url: "/shelters/#{@shelter.id}/pets", method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :breed %>
  <%= f.text_field :breed %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :adoptable %>
  <%= f.check_box :adoptable, value: true %>

  <%= f.submit %>
<% end %>
