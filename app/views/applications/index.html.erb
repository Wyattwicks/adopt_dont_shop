<%= link_to "Pets", "/pets" %>
<%= link_to "Shelters", "/shelters" %>
<%= link_to "Veterinarians", "/veterinarians" %>
<%= link_to "Veterinary Offices", "/veterinary_offices" %>
<%= link_to "Applications", "/applications" %>

<h1>All Applications</h1>

<%= form_with url: "/applications", method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<% end %>


<% @applications.each do |application| %>
  <h3>Applicant Name: <%= application.name %></h3>
  <p>Address: <%= application.address %></p>
  <p>Why you would be a good owner: <%= application.description %></p>
  <p>Pets:  <%= application.pets %></p>
  <p>Application Status: <%= application.status %>
  <%= link_to "Edit #{application.name}", "/applications/#{application.id}/edit" %>
  <%= link_to "Delete #{application.name}", "/application/#{application.id}", method: :delete %>
<% end %>
